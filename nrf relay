#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>

const uint64_t pipe = 0xF0F1F2F3F1LL; // могут различатся только на младший байт

RF24 radio(9, 10); // CE, CSN
short int ch;
void setup() {
  Serial.begin(9600);

  radio.begin();
  delay(2);
  radio.setChannel(9); // канал (0-127)

  // скорость, RF24_250KBPS, RF24_1MBPS или RF24_2MBPS
  // RF24_250KBPS на nRF24L01 (без +) неработает.
  // меньше скорость, выше чувствительность приемника.
  radio.setDataRate(RF24_250KBPS);

  // мощьность передатчика RF24_PA_MIN=-18dBm, RF24_PA_LOW=-12dBm, RF24_PA_MED=-6dBM,
  radio.setPALevel(RF24_PA_HIGH);

  radio.openReadingPipe(1, pipe); // открываем первую трубу с индитификатором "pipe"
  //radio.openReadingPipe(2, pipe02); // открываем трубу с индитификатором "pipe02"
  //  radio.openReadingPipe(0,pipe01); // или открываем все трубы разом

  radio.startListening(); // включаем приемник, начинаем слушать трубу
  pinMode(2, OUTPUT);
  pinMode(3, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
}

// radio.stopListening(); // останавливает приём (нужно перед началом передачи)


void loop()
{


  if (radio.available()) { // проверяем не пришло ли чего в буфер.
    radio.read(&ch, sizeof(ch)); // читаем данные, указываем сколько байт читать
    Serial.print("send ");
    Serial.print(ch);
    if (ch == 48) {
      radio.stopListening();
      digitalWrite(2, HIGH);
      delay(100);
      digitalWrite(2, LOW);
      digitalWrite(3, HIGH);
      delay(100);
      digitalWrite(3, LOW);
      digitalWrite(5, HIGH);
      delay(100);
      digitalWrite(5, LOW);
      digitalWrite(7, HIGH);
      delay(100);
      digitalWrite(7, LOW);
      digitalWrite(8, HIGH);
      delay(100);
      digitalWrite(8, LOW);
      radio.startListening();
    }
    if (ch == 49) {
      digitalWrite(2, HIGH);
      delay(100);
      digitalWrite(2, LOW);
    }
    if (ch == 50) {
      digitalWrite(3, HIGH);
      delay(100);
      digitalWrite(3, LOW);
    }
    if (ch == 51) {
      digitalWrite(5, HIGH);
      delay(100);
      digitalWrite(5, LOW);
    }
    if (ch == 52) {
      digitalWrite(7, HIGH);
      delay(100);
      digitalWrite(7, LOW);
      if (ch == 53) {
        digitalWrite(8, HIGH);
        delay(100);
        digitalWrite(8, LOW);
      }
    }
  }
}
